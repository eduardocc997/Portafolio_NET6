@model IEnumerable<ProyectoViewModel>

@if (Model is not null)
{
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var p in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@p.ImagenURL" class="card-img-top" alt="Imagen proyecto @p.Titulo">
                        <div class="card-body">
                            <h5 class="card-title">@p.Titulo</h5>
                            <p class="card-text">@p.Descripcion</p>
                            <div>
                                <div class="card-footer">
                                    <a class="btn btn-primary" href="@p.Link" target="_blank" rel="noopener noreferrer">Visitar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}