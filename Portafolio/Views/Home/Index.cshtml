@model HomeIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}
<partial name="_Presentacion" />

<partial name="_Habilidades" />

@if (Model.Proyectos is not null)
{
    <div class="text-center" style="padding-top: 6rem;">
        <h1>Mis trabajos recientes</h1>
        <p>Aquí puedes ver algunos de mis trabajos más recientes</p>
    </div>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var p in Model.Proyectos)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@p.ImagenURL" class="card-img-top" alt="Imagen proyecto @p.Titulo">
                        <div class="card-body">
                            <h5 class="card-title">@p.Titulo</h5>
                            <p class="card-text">@p.Descripcion</p>
                            <div>
                                <div class="card-footer">
                                    <a class="btn btn-primary" href="@p.Link" target="_blank" rel="noopener noreferrer">Visitar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}